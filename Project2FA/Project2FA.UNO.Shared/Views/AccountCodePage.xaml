            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <utu:NavigationBar             
            Grid.Row="0"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
            MainCommandMode="Action"
            DefaultLabelPosition="Collapsed">
            <utu:NavigationBar.Content>
                <TextBlock 
                    VerticalAlignment="Center"
                    Text="{x:Bind strings:Resources.AccountCodePageTitle}"
                    Style="{StaticResource ShellHeaderTitleTextBlockStyle}"/>
            </utu:NavigationBar.Content>
           
            <utu:NavigationBar.MainCommand>
                <AppBarButton 
                    Content="#Back" 
                    Visibility="Collapsed"
                    Foreground="{ThemeResource  SystemAccentColor}" />
            </utu:NavigationBar.MainCommand>
            <utu:NavigationBar.PrimaryCommands>
                <AppBarButton Label="Add" Style="{StaticResource AppBarButtonStyle}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE710;"/>
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout 
                            MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}"
                            Placement="Top">
                            <MenuFlyoutItem 
                                x:Uid="AccountCodePageAddCamera"
                                Command="{x:Bind ViewModel.CameraCommand}"
                                Text="AccountCodePageAddCamera.Text~">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE960;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem 
                                x:Uid="AccountCodePageAddManual"
                                Text="AccountCodePageAddManual.Text~">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE70F;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

            </utu:NavigationBar.PrimaryCommands>
            <utu:NavigationBar.SecondaryCommands>
                <AppBarButton 
                    x:Name="ABB_Logout"
                    x:Uid="AccountCodePageABBLogout" 
                    ToolTipService.ToolTip="{x:Bind strings:Resources.AccountCodePageABBLogoutToolTip, FallbackValue=''}"
                    Command="{x:Bind ViewModel.LogoutCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE1F6;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton 
                    x:Name="ABB_Refresh"
                    x:Uid="AccountCodePageReloadDatafile"
                    ToolTipService.ToolTip="{x:Bind strings:Resources.AccountCodePageReloadDatafileToolTip, FallbackValue=''}"
                    Command="{x:Bind ViewModel.RefreshCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE895;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            </utu:NavigationBar.SecondaryCommands>
        </utu:NavigationBar>

        <Grid Grid.Row="1">

            <AutoSuggestBox 
            x:Name="MobileAutoSuggestBox"
            Height="48"
            QueryIcon="Find"
            Text="{x:Bind ViewModel.SearchedAccountLabel,Mode=TwoWay}"
            Visibility="{x:Bind ViewModel.ShellViewModel.IsMobileSearchActive, Mode=OneWay}"
            VerticalAlignment="Center"
            PlaceholderText="{x:Bind strings:Resources.AccountCodePageAutoSuggestBoxPlaceholder}" 
            TextChanged="AutoSuggestBox_TextChanged" 
            VerticalContentAlignment="Center"
            SuggestionChosen="AutoSuggestBox_SuggestionChosen" 
            UpdateTextOnSelect="False"
            TextMemberPath="Name"
            GotFocus="AutoSuggestBox_GotFocus"
            Margin="4,0,4,4" >
                <AutoSuggestBox.ItemTemplate>
                    <DataTemplate x:DataType="models:TwoFACodeModel">
                        <Grid
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            ToolTipService.ToolTip="{x:Bind Label}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                FontSize="16"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource SimpleIcons}"
                                Glyph="{x:Bind AccountIconName, Mode=OneWay, Converter={StaticResource FontIconNameToGlyphConverter}}"/>
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind Label, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </DataTemplate>
                </AutoSuggestBox.ItemTemplate>
            </AutoSuggestBox>
            <!--<Storyboard x:Name="FadeOutStoryboard">
                <DoubleAnimation
                Storyboard.TargetName="MobileAutoSuggestBox"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
            </Storyboard>
            <Storyboard x:Name="FadeInStoryboard">
                <DoubleAnimation
                Storyboard.TargetName="MobileAutoSuggestBox"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
            </Storyboard>-->
        </Grid>

        <Grid 
        x:Name="MainGrid"
        Grid.Row="2"
        Margin="2,0,0,0"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <!--<ListView 
            x:Name="LV_AccountCollection"
            ItemsSource="{x:Bind ViewModel.TwoFADataService.ACVCollection, Mode=OneWay}"
                ItemContainerStyle="{StaticResource TwoFASelectionListViewItemStyle}"
            IsItemClickEnabled="False"
            HorizontalContentAlignment="Stretch"
                ItemTemplateSelector="{StaticResource AccountAvatarTemplateSelector}"
            HorizontalAlignment="Stretch">
