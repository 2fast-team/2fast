            <DataTemplate x:Key="TwoFACodeCustomTemplate" x:DataType="models:TwoFACodeModel">
                <UserControl
                    x:Name="Root" 
                    MaxWidth="660"
                    RightTapped="TwoFACodeItem_RightTapped" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch" >
                    <Grid 
                        HorizontalAlignment="Stretch"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Background="{ThemeResource TwoFABackgroundBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.RowSpan="3" >
                            <Border 
                                Width="2.5" 
                                ui:Effects.Shadow="{StaticResource SignShadow}"
                                Background="{StaticResource SystemAccentColor}" />
                        </Grid>

                        <muxc:PersonPicture 
                            Height="48"
                            Width="48"
                            DisplayName="{x:Bind Model, 
                            Converter={StaticResource PersonalPictureInitialsVisibilityConverter},
                            Mode=OneWay}"
                            Margin="15,10,20,0"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Tag="{x:Bind AccountIconName, Mode=OneWay}"/>

                        <RelativePanel 
                            Grid.Column="2" 
                            Grid.RowSpan="2" 
                            Grid.ColumnSpan="2">
                            <TextBlock
                                x:Name="AccountName"
                                FontSize="22"
                                Margin="0,10,10,0" 
                                VerticalAlignment="Center">
                                <Bold>
                                    <Run Text="{x:Bind Label,Mode=OneWay}"/>
                                </Bold>
                            </TextBlock>
                            <TextBlock 
                                x:Name="IssuerName"
                                FontWeight="Thin"
                                Text="{x:Bind Issuer,Mode=OneWay}" 
                                FontSize="22"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"/>
                        </RelativePanel>

                        <StackPanel
                            Orientation="Horizontal"
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="0,0,0,4">

                            <Button
                                x:Name="BTN_ShowCode"
                                ToolTipService.ToolTip="{x:Bind HideTOTPCode, Mode=OneWay, Converter={StaticResource TOTPVisibilityTooltipConverter}}"
                                Width="48"
                                Height="48"
                                Margin="0,0,4,0"
                                Visibility="{Binding DataContext.CodeVisibilityOptionEnabled, ElementName=Page}"
                                CommandParameter="{Binding}"
                                Command="{Binding DataContext.HideOrShowTOTPCodeCommand, ElementName=Page, Mode=OneTime}"
                                Style="{StaticResource TransparentButtonStyle}"
                                HorizontalAlignment="Stretch" >
                                <FontIcon 
                                    Glyph="{x:Bind HideTOTPCode, Converter={StaticResource ShowCodeToIconConverter},Mode=OneWay}"
                                    FontSize="24"
                                    Style="{StaticResource FullFluentFontIconStyle}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Button>
                            <Grid>
                                <TextBlock
                                Text="{x:Bind TwoFACode,Mode=OneWay}"
                                FontSize="28"
                                Visibility="{x:Bind HideTOTPCode, Mode=OneWay, Converter={StaticResource VisibleWhenFalseConverter}}"
                                VerticalAlignment="Center"
                                CharacterSpacing="60"
                                Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock
                                Text="______"
                                Visibility="{x:Bind HideTOTPCode, Mode=OneWay}"
                                FontSize="28"
                                CharacterSpacing="205"
                                VerticalAlignment="Center" 
                                Foreground="{ThemeResource SystemAccentColor}" />
                            </Grid>

                            <Button
                                x:Name="BTN_CopyCode"
                                x:Uid="AccountCopyCodeButton"
                                Width="48"
                                Height="48"
                                Click="BTN_CopyCode_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Margin="8,0,4,0"
                                HorizontalAlignment="Stretch" >
                                <FontIcon Style="{StaticResource DefaultFontIconStyle}" Glyph="&#xE8C8;" FontSize="20"/>
                            </Button>
                            <Grid VerticalAlignment="Center">
                                <unocontrols:RadialProgressBar
                                Value="{x:Bind Seconds,Mode=OneWay}"
                                Maximum="{x:Bind Period,Mode=OneWay}"
                                Minimum="0"
                                IsIndeterminate="False"
                                Width="42"
                                Height="42"
                                x:Uid="AccountCodePageRemainingSeconds"
                                Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"/>
                                <TextBlock 
                                x:Uid="AccountCodePageRemainingSeconds"
                                Opacity="0.6"
                                Text="{x:Bind Seconds, Mode=OneWay, Converter={StaticResource DoubleToInt32ToStringConverter}}"
                                FontSize="16"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"/>
                            </Grid>
                            <Button
                                x:Name="BTN_SetFavourite"
                                Width="48"
                                Height="48"
                                CommandParameter="{Binding}"
                                Command="{Binding DataContext.SetFavouriteCommand, ElementName=Page, Mode=OneTime}"
                                Style="{StaticResource TransparentButtonStyle}"
                                Margin="8,0,4,0"
                                ToolTipService.ToolTip="{x:Bind IsFavourite, Mode=OneWay, Converter={StaticResource FavouriteTooltipConverter}}"
                                HorizontalAlignment="Stretch" >
                                <FontIcon 
                                    Glyph="{x:Bind IsFavourite, Converter={StaticResource FavouriteToIconConverter},Mode=OneWay}"
                                    FontSize="20"
                                    Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Button>
