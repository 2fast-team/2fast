            <DataTemplate x:Key="SuggestBoxDataTemplate" x:DataType="models:TwoFACodeModel">
                <Grid
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    ToolTipService.ToolTip="{x:Bind Label, FallbackValue=''}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--<FontIcon
                        FontSize="16"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SimpleIcons}"
                        Glyph="{x:Bind AccountIconName, Mode=OneWay, Converter={StaticResource FontIconNameToGlyphConverter}}"/>-->
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Label, Mode=OneWay}"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="TwoFACodeCustomTemplate" x:DataType="models:TwoFACodeModel">
                <ItemContainer>
                    <Grid Background="{ThemeResource TwoFABackgroundBrush}" Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Border
					    Grid.RowSpan="3"
            Width="2.5"
            Margin="0,0,0,8"
            Background="{ThemeResource  SystemAccentColor}" />

                            <PersonPicture 
            Height="68"
            Width="68"
            DisplayName="{x:Bind Model, 
            Converter={StaticResource PersonalPictureInitialsVisibilityConverter},
            Mode=OneWay}"
            not_ios:FontSize="38"
            ios:FontSize="34"
            Margin="8,10,20,0"
            Grid.Column="1"
            Grid.Row="0"
            Grid.RowSpan="2"
            Style="{StaticResource DefaultPersonPictureStyle}"
            Tag="{x:Bind AccountIconName, Mode=OneWay}">
                            </PersonPicture>

                            <!--<StackPanel
            MinHeight="80"
            Grid.Column="2" 
            Grid.RowSpan="2" 
            Grid.ColumnSpan="2">
            <TextBlock
                x:Name="AccountName"
                FontSize="20"
                Margin="0,10,10,0" 
                VerticalAlignment="Center">
                <Bold>
                    <Run Text="{x:Bind Label,Mode=OneWay}"/>
                </Bold>
            </TextBlock>
            <TextBlock 
                x:Name="IssuerName"
                FontWeight="Thin"
                Text="{x:Bind Issuer,Mode=OneWay}" 
                FontSize="20"
                TextWrapping="Wrap"
                VerticalAlignment="Center"/>
        </StackPanel>-->

                            <RelativePanel 
            MinHeight="80"
            Grid.Column="2" 
            Grid.RowSpan="2" 
            Grid.ColumnSpan="2">
                                <TextBlock
                x:Name="AccountName"
                FontSize="20"
                Margin="0,10,10,0" 
                VerticalAlignment="Center">
                <Bold>
                    <Run Text="{x:Bind Label,Mode=OneWay}"/>
                </Bold>
                                </TextBlock>
                                <TextBlock 
                x:Name="IssuerName"
                FontWeight="Thin"
                Text="{x:Bind Issuer,Mode=OneWay}" 
                FontSize="20"
                TextWrapping="Wrap"
                VerticalAlignment="Center"/>
                            </RelativePanel>

                            <StackPanel
            Orientation="Horizontal"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="8,0,0,4">

                                <Button
                x:Name="BTN_ShowCode"
                Style="{StaticResource TransparentButtonStyle}"
                Width="48"
                Height="48"
                Margin="0,0,4,0"
                Visibility="{Binding DataContext.CodeVisibilityOptionEnabled, ElementName=Page}"
                CommandParameter="{Binding}"
                Command="{Binding DataContext.HideOrShowTOTPCodeCommand, ElementName=Page, Mode=OneTime}"

                HorizontalAlignment="Stretch" >
                                    <FontIcon 
                    Glyph="&#xE18B;"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                                </Button>

                                <Grid>
                                    <TextBlock
                Text="{x:Bind TwoFACode,Mode=OneWay}"
                FontSize="24"
                Visibility="{x:Bind HideTOTPCode, Mode=OneWay, Converter={StaticResource VisibleWhenFalseConverter}}"
                VerticalAlignment="Center"
                CharacterSpacing="60"
                Foreground="{ThemeResource SystemAccentColor}" />
                                    <TextBlock
                Text="______"
                Visibility="{x:Bind HideTOTPCode, Mode=OneWay}"
                FontSize="24"
                CharacterSpacing="200"
                VerticalAlignment="Center" 
                Foreground="{ThemeResource SystemAccentColor}" />
                                </Grid>

                                <Button
                x:Name="BTN_CopyCode"
                Style="{StaticResource TransparentButtonStyle}"
                x:Uid="AccountCopyCodeButton"
                Width="48"
                Height="48"
                CommandParameter="{Binding}"
                Command="{Binding DataContext.CopyCodeToClipboardCommand, ElementName=Page, Mode=OneTime}"
                Margin="8,0,4,0" 
                HorizontalAlignment="Stretch" >
                                    <FontIcon Glyph="&#xE8C8;" FontSize="20"/>
                                    <Button.Flyout>
                                        <Flyout>
                                            <TextBlock Text="{x:Bind strings:Resources.AccountCodePageCopyCodeTeachingTip}"/>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>

                                <Grid VerticalAlignment="Center">
                                    <appcontrols:RadialProgressBar
                Value="{x:Bind Seconds,Mode=OneWay}" 
                Maximum="{x:Bind Period,Mode=OneWay}" 
                    
                Minimum="0"
                IsIndeterminate="False"
                Width="42"
                Height="42"
                x:Uid="AccountCodePageRemainingSeconds"
                
                Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"/>

                                    <TextBlock 
                x:Uid="AccountCodePageRemainingSeconds"
                Opacity="0.6"
                Text="{x:Bind Seconds, Mode=OneWay, Converter={StaticResource DoubleToInt32ToStringConverter}}"
                FontSize="16"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"/>
                                </Grid>
                                <Button
                x:Name="BTN_SetFavourite"
                Width="48"
                Height="48"
                CommandParameter="{Binding}"
                Command="{Binding DataContext.SetFavouriteCommand, ElementName=Page, Mode=OneTime}"
                Style="{StaticResource TransparentButtonStyle}"
                Margin="8,0,4,0"
                ToolTipService.ToolTip="{x:Bind IsFavourite, Mode=OneWay, Converter={StaticResource FavouriteTooltipConverter}}"
                HorizontalAlignment="Stretch" >
                                    <FontIcon 
                    Glyph="{x:Bind IsFavourite, Converter={StaticResource FavouriteToIconConverter},Mode=OneWay}"
                    FontSize="20"
                    Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                                </Button>
                            </StackPanel>

                            <Button
            x:Uid="AccountCodePageItemMoreBTN"
            Style="{StaticResource TransparentButtonStyle}"
            Grid.Column="4" 
            Margin="8,0,0,0" 
            VerticalAlignment="Top" >
                                <FontIcon Glyph="&#xE712;"/>
                                <Button.Flyout>
                                    <MenuFlyout 
                    UseNativePopup="True" 
                    toolkit:MenuFlyoutExtensions.CancelTextIosOverride="{x:Bind strings:Resources.ButtonTextCancel}">
                                        <MenuFlyoutItem 
                        x:Uid="AccountCodePageEditEntry"
                        Click="BTN_EditItem_Click">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE70F;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem 
                        x:Uid="AccountCodePageDeleteEntry"
                        IsEnabled="{Binding DataContext.IsAccountNotDeleted, ElementName=Page, Mode=OneWay}"
                        Click="BTN_DeleteItem_Click">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE107;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <not_mobile:MenuFlyoutItem
                        x:Uid="AccountCodePageShowQRCode"
                        Click="BTN_ShareItem_Click">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE72D;"/>
                                            </MenuFlyoutItem.Icon>
                                        </not_mobile:MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="WindowStates">
                                <VisualState x:Name="NarrowState">
                                    <VisualState.StateTriggers>
                                        <AdaptiveTrigger MinWindowWidth="0" />
                                    </VisualState.StateTriggers>
                                    <VisualState.Setters>
                                        <Setter Target="IssuerName.(RelativePanel.Below)" Value="AccountName"/>
                                        <Setter Target="IssuerName.Margin" Value="0,10,0,0"/>
                                        <!--<Setter Target="Root.MinWidth" Value="478"/>-->
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="MediumState">
                                    <VisualState.StateTriggers>
                                        <AdaptiveTrigger MinWindowWidth="720" />
                                    </VisualState.StateTriggers>
                                    <VisualState.Setters>
                                        <!--<Setter Target="Root.MinWidth" Value="660"/>-->
                                        <Setter Target="IssuerName.(RelativePanel.RightOf)" Value="AccountName"/>
                                        <Setter Target="IssuerName.Margin" Value="10,10,0,0"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ItemContainer>
                

            </DataTemplate>

