<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project2FA.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project2FA.MAUI"
    xmlns:views="clr-namespace:Project2FA.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="#Home"
        ContentTemplate="{DataTemplate views:BlankPage}"
        Route="BlankPage" />

    <ShellContent
        Title="#Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Accounts"
        ContentTemplate="{DataTemplate views:AccountCodePage}"
        Route="AccountCodePage" >

    </ShellContent>

    <ShellContent
        Title="SettingsPage"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        Title="WelcomePage"
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="WelcomePage" />

    <ShellContent
        Title="FileActivationPage"
        ContentTemplate="{DataTemplate views:FileActivationPage}"
        Route="FileActivationPage" />

</Shell>
