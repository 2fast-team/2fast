<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2FA.MAUI.Views.WelcomePage"
             Title="WelcomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="#Create datafile" Command="{x:Bind ViewModel.LoadExistDatafileCommand}"/>
        <Button Text="#Load datafile" Command="{x:Bind ViewModel.LoadExistDatafileCommand}"/>
    </VerticalStackLayout>
</ContentPage>