    <Grid x:Name="Root">
        <Grid.Background>
            <ImageBrush 
                x:Name="MyImage"
                ImageSource="ms-appx:///Assets/Background/mhellmeier_blue-hills.jpg" 
                Stretch="UniformToFill">
            </ImageBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <!--<Border Grid.ColumnSpan="3">
            <winui:ParallaxView x:Name="Parallax"
                                    VerticalShift="50">
                <Image Source="ms-appx:///Assets/Background/mhellmeier_blue-hills.jpg"
