                            Foreground="White"
                            FontSize="40"
                            DisplayName="{x:Bind Model, 
                            Converter={StaticResource PersonalPictureInitialsVisibilityConverter},
                            Mode=OneWay}"
                            Margin="8,10,20,0"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Style="{StaticResource DefaultPersonPictureStyle}"
                            Tag="{x:Bind AccountIconName, Mode=OneWay}">
                            </PersonPicture>
                        </utu:ShadowContainer>

                        <!--<StackPanel
                            MinHeight="80"
                            Grid.Column="2" 
                            Grid.RowSpan="2" 
