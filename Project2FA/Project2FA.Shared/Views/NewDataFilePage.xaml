                                    x:Uid="PasswordAdvancedHashOptionText"
                                    IsChecked="{x:Bind ViewModel.UseExtendedHash,Mode=TwoWay}"/>
                            </toolkit:Expander>--><!--

                        </StackPanel>
                    </ScrollViewer>
                    --><!--<toolkit:Loading 
