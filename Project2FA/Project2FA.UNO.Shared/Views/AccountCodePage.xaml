            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <utu:NavigationBar
            Grid.Row="0"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
            MainCommandMode="Action"
            
            DefaultLabelPosition="Collapsed">
            <utu:NavigationBar.Resources>
                <Style TargetType="MenuFlyoutPresenter">
                    <Setter Target="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
                </Style>
            </utu:NavigationBar.Resources>
            <utu:NavigationBar.Content>
                <TextBlock 
                    VerticalAlignment="Center"
                    Text="{x:Bind strings:Resources.AccountCodePageTitle}"
                    Style="{StaticResource ShellHeaderTitleTextBlockStyle}"/>
            </utu:NavigationBar.Content>
           
            <utu:NavigationBar.MainCommand>
                <AppBarButton 
                    Content="#Back" 
                    Visibility="Collapsed"
                    Foreground="{ThemeResource  SystemAccentColor}" />
            </utu:NavigationBar.MainCommand>
            <utu:NavigationBar.PrimaryCommands>
                <AppBarButton>
                    <AppBarButton.Icon>
                        <FontIcon FontSize="28" Glyph="&#xE710;"/>
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout 
                            UseNativePopup="True" 
                            toolkit:MenuFlyoutExtensions.CancelTextIosOverride="{x:Bind strings:Resources.ButtonTextCancel}"
                            Placement="Top">
                            <MenuFlyoutItem 
                                x:Uid="AccountCodePageAddCamera"
                                Command="{x:Bind ViewModel.CameraCommand}"
                                Text="AccountCodePageAddCamera.Text~">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE960;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem 
                                x:Uid="AccountCodePageAddManual"
                                Command="{x:Bind ViewModel.AddAccountCommand}"
                                Text="AccountCodePageAddManual.Text~">
