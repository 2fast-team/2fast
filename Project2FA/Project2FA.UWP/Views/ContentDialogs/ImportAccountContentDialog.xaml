<ContentDialog
    x:Class="Project2FA.UWP.Views.ImportAccountContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project2FA.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:Project2FA.Strings"
    xmlns:oldtoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:Project2FA.Repository.Models"
    Style="{StaticResource MyContentDialogStyle}"
    mc:Ignorable="d"
    Title="TITLE"
    PrimaryButtonText="Button1"
    SecondaryButtonText="Button2"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Themes/AppColors.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="TwoFAAccountImportTemplate" x:DataType="models:TwoFACodeModel">
                <UserControl
                    x:Name="Root" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch">
                    <Grid 
                        HorizontalAlignment="Stretch"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Background="{ThemeResource TwoFABackgroundBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MaxWidth="48"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox 
                            IsChecked="{x:Bind IsChecked, Mode=TwoWay}"
                            IsEnabled="{x:Bind IsEnabled, Mode=OneWay}"
                            Grid.Row="0"
                            Grid.RowSpan="2">
                        </CheckBox>

                        <StackPanel 
                            Grid.Column="1" 
                            Margin="0,0,0,15">
                            <TextBlock
                                x:Name="AccountName"
                                FontSize="22"
                                Margin="0,10,10,0" 
                                TextWrapping="WrapWholeWords"
                                VerticalAlignment="Center">
                                <Bold>
                                    <Run Text="{x:Bind Label,Mode=OneWay}"/>
                                </Bold>
                            </TextBlock>
                            <TextBlock 
                                x:Name="IssuerName"
                                FontWeight="Thin"
                                Margin="0,10,10,0"
                                Text="{x:Bind Issuer,Mode=OneWay}" 
                                FontSize="22"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </UserControl>
            </DataTemplate>
        </ResourceDictionary>
        
       
    </ContentDialog.Resources>

    <Grid>
        <Pivot>
            <PivotItem
                Header="#selection">
                <Grid MinHeight="{ThemeResource ContentDialogMaxHeight}">
                    <ScrollViewer>
                        <StackPanel Margin="0,0,16,0">
                            <oldtoolkit:MarkdownTextBlock 
            Text="~ImportAccountsContentDialogInfo.Text" 
            TextWrapping="Wrap" 
            x:Uid="ImportAccountsContentDialogInfo"
            Margin="0,10,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <Button 
            x:Name="BTN_QRCodeScan" 
            Margin="0,10,0,10" 
            HorizontalContentAlignment="Left"
            Style="{StaticResource AccentButtonStyle}"
            Command="{x:Bind ViewModel.ScanQRCodeCommand}"
            MinWidth="255">
                                    <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left">
                                        <FontIcon Glyph="&#xED14;" FontSize="30"/>
                                        <TextBlock
                    Text="~ImportAccountsContentDialogReadQRCode.Text" 
                    Margin="8,0,0,0" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center" 
                    x:Uid="ImportAccountsContentDialogReadQRCode" />
                                    </StackPanel>
                                    <!--<Button.Resources>
                        <muxc:TeachingTip
                        x:Name="QRCodeScanTip"
                        x:Uid="AddAccountContentDialogReadQRCodeTip"
                        Target="{x:Bind BTN_QRCodeScan}"
                        IsLightDismissEnabled="True">
                            <muxc:TeachingTip.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Grid>
                                        <unocontrols:RadialProgressBar
                                Value="{x:Bind ViewModel.Seconds,Mode=OneWay}" 
                                Maximum="{x:Bind ViewModel.OpeningSeconds,Mode=OneWay}" 
                                Width="50"
                                Height="50"
                                IsIndeterminate="False"
                                Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"/>
                                        <TextBlock 
                                Opacity="0.6"
                                Text="{x:Bind ViewModel.Seconds, Mode=OneWay}"
                                FontSize="16"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock 
                                Margin="12,0,0,0"
                                Text="{x:Bind strings:Resources.AddAccountContentDialogReadQRCodeTeachingTipInfo}"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"/>
                                </StackPanel>
                            </muxc:TeachingTip.Content>
                        </muxc:TeachingTip>
                    </Button.Resources>-->
                                </Button>
                                <Button
                    Height="48"
                    Width="48"
                    Padding="4,4,4,4"
                    Click="HLBTN_QRCodeInfo"
                    Style="{StaticResource TransparentButtonStyle}"
                    ToolTipService.ToolTip="{x:Bind strings:Resources.ToolTipShowHelp, FallbackValue=''}"
                    VerticalAlignment="Center">
                                    <FontIcon
                    FontSize="20"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Glyph="&#xE946;"  />
                                </Button>
                            </StackPanel>


                            <Button 
            x:Name="BTN_QRCodeCameraScan"
            Margin="0,10,0,10" 
            HorizontalContentAlignment="Left"
            Style="{StaticResource AccentButtonStyle}"
            Command="{x:Bind ViewModel.CameraScanCommand}"
            MinWidth="255" >
                                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left">
                                    <FontIcon 
                    FontSize="30"
                    Glyph="" />
                                    <TextBlock 
                    Text="~AddAccountContentDialogCameraScanBTN.Text" 
                    Margin="8,0,0,0" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center" 
                    x:Uid="AddAccountContentDialogCameraScanBTN" 
                    FontFamily="Segoe UI" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </PivotItem>
            <PivotItem 
                Header="#inputs/camera">
                <Grid MinHeight="{ThemeResource ContentDialogMaxHeight}">
                    
                </Grid>
            </PivotItem>
            <PivotItem
                Header="#import backup" 
                x:Uid="AddAccountContentDialogImportBackup"
                x:Name="PI_ImportAccountBackup">
                <Grid MinHeight="{ThemeResource ContentDialogMaxHeight}">
                    <ListView
                        ItemsSource="{x:Bind ViewModel.OTPList, Mode=OneWay}"
                        ItemTemplate="{StaticResource TwoFAAccountImportTemplate}" 
                        IsItemClickEnabled="True"
                        ItemContainerStyle="{StaticResource TwoFASelectionListViewItemStyle}"
                        HorizontalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch" 
                        ItemClick="ListView_ItemClick"/>
                </Grid>

            </PivotItem>
        </Pivot>
    </Grid>
</ContentDialog>
