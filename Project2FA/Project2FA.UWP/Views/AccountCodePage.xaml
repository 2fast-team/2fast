<Page
    x:Class="Project2FA.UWP.Views.AccountCodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Project2FA.Repository.Models"
    xmlns:wctc="using:CommunityToolkit.WinUI.Controls"
    xmlns:appcontrols="using:Project2FA.UWP.Controls"
    xmlns:unocontrols="using:Project2FA.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:views="using:Project2FA.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="using:Project2FA.ViewModels"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:strings="using:Project2FA.Strings"
    xmlns:lottie="using:CommunityToolkit.WinUI.Lottie"
    xmlns:wctmedia="using:CommunityToolkit.WinUI.Media"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Project2FA.Helpers"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    x:Name="Page"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <helpers:AccountAvatarTemplateSelector 
                x:Key="AccountAvatarTemplateSelector"
                Normal="{StaticResource TwoFACodeCustomTemplate}" 
                Accent="{StaticResource TwoFACodeCustomAccentTemplate}"/>

            <DataTemplate x:Key="SuggestBoxDataTemplate" x:DataType="models:TwoFACodeModel">
                <Grid
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    ToolTipService.ToolTip="{x:Bind Label, Mode=OneWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        FontSize="16"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SimpleIcons}"
                        Glyph="{x:Bind AccountIconName, Mode=OneWay, Converter={StaticResource FontIconNameToGlyphConverter}}"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Label, Mode=OneWay}"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
            </DataTemplate>


            <DataTemplate x:Name="ShellHeaderTemplatePro" x:DataType="viewmodels:AccountCodePageViewModel">
                <UserControl>
                    <UserControl.Resources>
                        <Style TargetType="FontIcon">
                            <Setter Property="FontFamily" Value="{StaticResource SegoeFluentIcons}"/>
                        </Style>
                    </UserControl.Resources>
                    <Grid>
                        <CommandBar 
                    x:Name="HeaderCommandBar"
                    OverflowButtonVisibility="Auto"
                    DefaultLabelPosition="Right"
                    VerticalAlignment="Top"
                    Background="{ThemeResource ShellAcrylicWindowBrush}">
                            <CommandBar.Content>
                                <CommandBar 
                                OverflowButtonVisibility="Collapsed"
                                Background="{ThemeResource ShellAcrylicWindowBrush}"
                                DefaultLabelPosition="Right">
                                    <CommandBar.Content>
                                        <TextBlock 
                                        Style="{StaticResource ShellHeaderTitleTextBlockStyle}"
                                        Text="{x:Bind strings:Resources.AccountCodePageTitle}"
                                        Margin="15,0,0,11"
                                        TextWrapping="NoWrap" 
                                        VerticalAlignment="Top" />
                                    </CommandBar.Content>
                                    <CommandBar.PrimaryCommands>
                                        <AppBarSeparator Foreground="{ThemeResource ApplicationForegroundThemeBrush}"/>
                                        <AppBarButton 
                                        x:Name="ABB_AddAccount"
                                        x:Uid="AccountCodePageAddEntry"
                                        Command="{x:Bind AddAccountCommand}">
                                            <AppBarButton.Icon>
                                                <FontIcon Glyph="&#xE710;"/>
                                            </AppBarButton.Icon>
                                            <AppBarButton.Resources>
                                                <!--user information for adding totp accounts-->
                                                <appcontrols:AutoCloseTeachingTip 
                                                x:Name="EmptyAccountCollectionTip"
                                                AutoCloseInterval="10000"
                                                BorderBrush="{ThemeResource SystemAccentColor}"
                                                x:Uid="AccountCodePageEmptyCollectionTip"
                                                IsOpen="{x:Bind TwoFADataService.EmptyAccountCollectionTipIsOpen, Mode=TwoWay}"
                                                BorderThickness="2"
                                                Target="{Binding ElementName=ABB_AddAccount, Mode=OneTime}">
                                                    <muxc:TeachingTip.HeroContent>
                                                        <muxc:AnimatedVisualPlayer 
                                                        MaxHeight="120"
                                                        x:Name="LottiePlayer"
                                                        AutoPlay="True">
                                                            <lottie:LottieVisualSource  
                                                                UriSource="ms-appx:///Assets/AnimatedVisuals/10223-search-empty.json"/>
                                                            </muxc:AnimatedVisualPlayer>
                                                    </muxc:TeachingTip.HeroContent>
                                                </appcontrols:AutoCloseTeachingTip>
                                            </AppBarButton.Resources>
                                        </AppBarButton>
                                        <!--<AppBarButton
                                            x:Name="ABB_ImportAccount"
                                            x:Uid="AccoundCodePageImportEntry"
                                            IsEnabled="False"
                                            ToolTipService.ToolTip="#todo">
                                            <AppBarButton.Icon>
                                                <FontIcon Glyph="&#xE8B5;"/>
                                            </AppBarButton.Icon>
                                            <AppBarButton.Flyout>
                                                <MenuFlyout Placement="Bottom">
                                                    <MenuFlyoutItem 
                                                        x:Uid="AccoundCodePageImportDocument"
                                                        Icon="Document"/>
                                                    <MenuFlyoutItem
                                                        x:Uid="AccoundCodePageImportCamera"
                                                        Icon="Camera"/>
                                                </MenuFlyout>
                                            </AppBarButton.Flyout>
                                        </AppBarButton>-->
                                    </CommandBar.PrimaryCommands>
                                </CommandBar>
                            </CommandBar.Content>
                            <CommandBar.PrimaryCommands>
                                <AppBarElementContainer
                                    Visibility="{x:Bind IsAccountDeleted, Mode=OneWay}">
                                    <CommandBar 
                                        OverflowButtonVisibility="Collapsed"
                                        Background="{ThemeResource ShellAcrylicWindowBrush}"
                                        DefaultLabelPosition="Right">
                                        <CommandBar.Content>
                                            <Grid>
                                                <unocontrols:RadialProgressBar
                                Value="{x:Bind TwoFADataService.TempDeletedTFAModel.Seconds,Mode=OneWay}" 
                                Maximum="{x:Bind TwoFADataService.TempDeletedTFAModel.Period, Mode=OneWay}" 
                                Width="40"
                                Height="40"
                                IsIndeterminate="False"
                                Foreground="{ThemeResource SystemAccentColor}"/>
                                                <TextBlock 
                                Opacity="0.6"
                                Text="{x:Bind TwoFADataService.TempDeletedTFAModel.Seconds,Mode=OneWay}"
                                FontSize="12"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"/>
                                            </Grid>
                                        </CommandBar.Content>
                                        <CommandBar.PrimaryCommands>
                                            <AppBarButton  
                                            x:Name="ABB_UndoDelete"
                                            x:Uid="AccountCodePageABBUndoDelete" 
                                            Command="{x:Bind UndoDeleteCommand}"  >
                                                <AppBarButton.Icon>
                                                    <FontIcon Glyph="&#xE7A7;"/>
                                                </AppBarButton.Icon>
                                            </AppBarButton>
                                        </CommandBar.PrimaryCommands>
                                    </CommandBar>
                                </AppBarElementContainer>
                                <AppBarElementContainer>
                                    <AutoSuggestBox 
                                        Width="200"
                                        Height="40"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind SearchedAccountLabel,Mode=TwoWay}"
                                        ItemsSource="{x:Bind SearchAccountCollection,Mode=OneWay}"
                                        PlaceholderText="{x:Bind strings:Resources.AccountCodePageAutoSuggestBoxPlaceholder}" 
                                        ItemTemplate="{StaticResource SuggestBoxDataTemplate}"
                                        ItemContainerStyle="{StaticResource AutoSuggestBoxItemContainerStyle}"
                                        TextChanged="AutoSuggestBox_TextChanged" 
                                        VerticalContentAlignment="Center"
                                        SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                                        UpdateTextOnSelect="False"
                                        TextMemberPath="Name"
                                        GotFocus="AutoSuggestBox_GotFocus"
                                        AllowFocusOnInteraction="True"
                                        Margin="0,0,1,0" >
                                        <AutoSuggestBox.QueryIcon>
                                            <FontIcon Glyph="&#xE721;" FontSize="18"/>
                                        </AutoSuggestBox.QueryIcon>


                                        <!--<AutoSuggestBox.Style>
                                            <Style TargetType="AutoSuggestBox">
                                                <Setter Property="SelectionHighlightColor" Value="{ThemeResource TextControlSelectionHighlightColor}" />
                                            </Style>
                                        </AutoSuggestBox.Style>-->
                                    </AutoSuggestBox>
                                </AppBarElementContainer>
                                <AppBarButton 
                                    x:Name="ABB_ManageFilter"
                                    x:Uid="AccountCodePageManageFilter"
                                    Click="ABB_SearchFilter_Click" >
                                    <AppBarButton.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <FontIcon Glyph="&#xE16E;"/>
                                            <FontIcon Glyph="&#xE70D;"/>
                                        </StackPanel>
                                    </AppBarButton.Content>
                                    <!--<AppBarButton.Icon>
                                        <FontIcon FontSize="30" Glyph="&#xE70D;"/>
                                    </AppBarButton.Icon>-->
                                    <FlyoutBase.AttachedFlyout>
                                        <Flyout LightDismissOverlayMode="Off">
                                            <views:CategoryFilterFlyout/>
                                        </Flyout>
                                    </FlyoutBase.AttachedFlyout>
                                </AppBarButton>
                                <AppBarToggleButton
                                    x:Name="ABB_SearchFilter"
                                    IsEnabled="{x:Bind TwoFADataService.IsFilterEnabled,Mode=OneWay}"
                                    IsChecked="{x:Bind TwoFADataService.IsFilterChecked,Mode=TwoWay}"
                                    x:Uid="AccountCodePageSearchFilter">
                                    <AppBarToggleButton.Icon>
                                        <FontIcon Glyph="&#xE16E;"/>
                                    </AppBarToggleButton.Icon>
                                </AppBarToggleButton>
                                <AppBarButton 
                                x:Name="ABB_Logout"
                                x:Uid="AccountCodePageABBLogout" 
                                Command="{x:Bind LogoutCommand}">
                                    <AppBarButton.Icon>
                                        <FontIcon Glyph="&#xE1F6;"/>
                                    </AppBarButton.Icon>
                                </AppBarButton>
                                <AppBarButton 
                                x:Name="ABB_Refresh"
                                x:Uid="AccountCodePageReloadDatafile"
                                Command="{x:Bind RefreshCommand}">
                                    <AppBarButton.Icon>
                                        <FontIcon Glyph="&#xE895;"/>
                                    </AppBarButton.Icon>
                                </AppBarButton>
                            </CommandBar.PrimaryCommands>
                        </CommandBar>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="WindowStates">
                                <VisualState x:Name="NarrowState">
                                    <VisualState.StateTriggers>
                                        <AdaptiveTrigger MinWindowWidth="0" />
                                    </VisualState.StateTriggers>
                                    <VisualState.Setters>
                                        <!--<Setter Target="ABB_ImportAccount.LabelPosition" Value="Collapsed"/>-->
                                        <Setter Target="ABB_Logout.LabelPosition" Value="Collapsed"/>
                                        <Setter Target="ABB_Refresh.LabelPosition" Value="Collapsed"/>
                                        <Setter Target="ABB_SearchFilter.LabelPosition" Value="Collapsed"/>
                                        <Setter Target="ABB_ManageFilter.LabelPosition" Value="Collapsed"/>
                                        <Setter Target="ABB_AddAccount.LabelPosition" Value="Collapsed"/>
                                        <Setter Target="ABB_UndoDelete.LabelPosition" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="MediumState">
                                    <VisualState.StateTriggers>
                                        <AdaptiveTrigger MinWindowWidth="1120" />
                                    </VisualState.StateTriggers>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </UserControl>
            </DataTemplate>

