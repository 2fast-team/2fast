<ContentDialog
    x:Class="Project2FA.UWP.Views.DisplayQRCodeContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project2FA.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:Project2FA.Strings"
    mc:Ignorable="d"
    Style="{StaticResource MyContentDialogStyle}"
    Title="{x:Bind strings:Resources.DisplayQRCodeContentDialogTitle}"
    SecondaryButtonText="{x:Bind strings:Resources.Confirm}">

    <StackPanel>
        <TextBlock Text="{x:Bind ViewModel.Header,Mode=OneWay}" Margin="0,12,0,12"/>
        <Image MaxWidth="250" Source="{x:Bind ViewModel.QRImage,Mode=OneWay}"/>
        <TextBlock 
            x:Uid="DisplayQRCodeContentDialogDesc"
            Text="~DisplayQRCodeContentDialogDesc.Text"/>
    </StackPanel>
</ContentDialog>
