                                                BorderThickness="2"
                                                IsOpen="True"
                                                Target="{Binding ElementName=ABB_Tutorial, Mode=OneTime}">
                                        <muxc:TeachingTip.HeroContent>
                                            <muxc:AnimatedVisualPlayer 
                                                        MaxHeight="120"
                                                        x:Name="LottiePlayer"
                                                        AutoPlay="True">
                                                <lottie:LottieVisualSource  
